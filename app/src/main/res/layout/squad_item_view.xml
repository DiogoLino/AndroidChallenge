<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/generic_10dp">

    <com.android.androidchallenge.views.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/generic_70_dp"
        android:layout_height="@dimen/generic_70_dp"
        android:layout_gravity="center_horizontal"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_compact"
        android:textStyle="bold"
        tools:text="SuperMan" />

</LinearLayout>