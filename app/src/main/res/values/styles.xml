<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SelectableButton" parent="BaseButton">
        <item name="textSize">18sp</item>
        <item name="android:background">@drawable/background_selectable_button</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PurpleSelectableButton" parent="BaseButton">
        <item name="textSize">18sp</item>
        <item name="android:background">@drawable/background_purple_radius</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="RedSelectableButton" parent="BaseButton">
        <item name="android:background">@drawable/background_red_radius</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ToolbarStyleBlack" parent="ToolbarStyle">
        <item name="colorControlNormal">@android:color/black</item>
    </style>

</resources>